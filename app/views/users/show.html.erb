<div>
	<h2>Welcome <%= @user.name %>!! </h2>
</div>
<div>
	<% if @mycomposters.length > 0 %>
	<h1>Your Composters</h1>
	<ul>
		<% @mycomposters.each do |composter| %>
		<li><%= composter.address %> -- <%= link_to "Delete", composter_path(composter), method: :delete %> </li>
		
		<% end %>
	</ul>
	<% end %>
</div>
<div>
	<h1>Add a new composter</h1>
	<%= form_for (@composter) do |f| %>
	<%= f.label :address %>
	<%= f.text_field :address %>

	<%= f.submit "Add composter", class: "btn btn-large btn-primary" %>
<% end %>
</div>
